{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "types": [],
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "typeRoots": ["./", "./update-env"]
  },
  "include": ["**/*.ts", "**/deno-types.d.ts"],
  "exclude": ["node_modules"]
}
